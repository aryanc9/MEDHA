rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow an authenticated user to read and write to their own user document
    // and any documents in any subcollections under their user document.
    match /users/{userId}/{documents=**} {
      allow read, write, create, update, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
